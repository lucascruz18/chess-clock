{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "typeRoots": ["./src/@types"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false
  }
}
